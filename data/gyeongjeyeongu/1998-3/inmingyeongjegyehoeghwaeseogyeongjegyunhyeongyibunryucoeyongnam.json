\uff0e\r\n\r\n\uc2e4\ub840\ub85c \uacf5\uc7a5, \uae30\uc5c5\uc18c\uc5d0\uc11c \ub144\uac04 \ucd1d\uc218\uc785\uacfc \uc9c0\ucd9c\uc0ac\uc774\uc758 \uade0\ud615\uc740 \uc885\ud569\uc801\uade0\ud615\uc774\uba70 \uc0dd\uc0b0\uacf5\uc815\uc0ac\uc774, \uae30\uc885\uc0ac\uc774\uc758 \uade0\ud615\uc740 \uc138\ubd80\uade0\ud615\uc73c\ub85c \ub41c\ub2e4\uff0e\r\n\r\n\uc885\ud569\uc801\uade0\ud615\uacfc \uc138\ubd80\uade0\ud615\uc774 \uc885\uc801\uc73c\ub85c \ub828\uacb0\ub41c\ub2e4\ub294\uac83\uc740 \uacc4\ud68d\ud654\uc758 \uc6c3\ub2e8\uc704\uc5d0\uc11c \uc124\uc815\ub41c \uc885\ud569\uc801\uade0\ud615\uc744 \uc544\ub798\ub2e8\uc704\uc5d0\uc11c \uc138\ubd80\uade0\ud615\uc73c\ub85c \uad6c\uccb4\ud654\ud560 \ub54c\uc5d0 \uc774\ub8e8\uc5b4\uc9c0\ub294 \uade0\ud615\uc758 \uccb4\uacc4\ub97c \ub9d0\ud55c\ub2e4\uff0e \uadf8\ub7ec\ubbc0\ub85c \uc804\uc778\ubbfc\uacbd\uc81c\uc801\uc778 \uc131\uaca9\uc744 \ub760\ub294 \uade0\ud615\uc744 \ubd80\ubb38 \ub610\ub294 \uc9c0\uc5ed\uc801\uc778 \uc131\uaca9\uc744 \ub760\ub294 \uade0\ud615\uc73c\ub85c \uad6c\uccb4\ud654\ud558\uace0 \uadf8\uac83\uc744 \ub2e4\uc2dc \uae30\uc5c5\uc18c\uc801\uc778 \uc131\uaca9\uc744 \ub760\ub294 \uade0\ud615\uc73c\ub85c \uad6c\uccb4\ud654\ud558\ub294 \uacbd\uc6b0\uc5d0 \uadf8\uac83\uc740 \uc885\ud569\uc801\uade0\ud615\uc744 \uc138\ubd80\uade0\ud615\uc73c\ub85c \uad6c\uccb4\ud654\ud558\ub294 \uacfc\uc815\uc73c\ub85c \ub41c\ub2e4\uff0e\r\n\r\n\uc774\ucc98\ub7fc \uc778\ubbfc\uacbd\uc81c\uacc4\ud68d\ud654\uc5d0\uc11c \uacbd\uc81c\uade0\ud615\uc740 \uc804\uc778\ubbfc\uacbd\uc81c\uc801\uc778 \uc885\ud569\uc801\uc778 \uade0\ud615\uc744 \uc911\uc2ec\uc73c\ub85c \ud558\uc5ec \ud6a1\uc801\uc73c\ub85c\ubfd0\ub9cc\uc544\ub2c8\ub77c \uc885\uc801\uc73c\ub85c \ub828\uacb0\ub428\uc73c\ub85c\uc368 \ud558\ub098\uc758 \uc815\uc5f0\ud55c \uccb4\uacc4\ub97c \uc774\ub8ec\ub2e4\uff0e\r\n\r\n\uacbd\uc81c\uade0\ud615\uc740 \ub610\ud55c \ud45c\ud604\ud615\ud0dc\uc5d0 \ub530\ub77c\uc11c \uc218\uc694\uc640 \uc6d0\ucc9c\uc758 \ub7c9\uc801\uc801\uc751\uad00\uacc4, \uc0ac\ud68c\uc801\uc7ac\uc0dd\uc0b0\uacfc\uc815\uc5d0\uc11c \uaddc\ubaa8\uc640 \ubc1c\uc804\uc218\uc900\uc0c1\uc758 \ud638\uc0c1\uad00\uacc4, \uc120\ud6c4\ucc28\uc801\uc778 \ud638\uc0c1\uad00\uacc4\ub85c \ud45c\ud604\ub418\ub294 \uacbd\uc81c\uade0\ud615\ub4e4\ub85c \ubd84\ub958\ud560\uc218 \uc788\ub2e4\uff0e\r\n\r\n\uc0ac\ud68c\uc801\uc0dd\uc0b0\uc5d0\uc11c \uc218\uc694\uc640 \uc6d0\ucc9c\uc758 \ub7c9\uc801\uc801\uc751\uad00\uacc4\ub294 \uc0ac\ud68c\uc801\uc218\uc694\uc640 \uc0ac\ud68c\uc801\uc6d0\ucc9c\uc0ac\uc774\uc758 \ud638\uc0c1\uad00\uacc4\ub85c \ub098\ud0c0\ub09c\ub2e4\uff0e \ub2e4\uc2dc\ub9d0\ud558\uc5ec \uadfc\ub85c\uc790\ub4e4\uc758 \uc790\uc8fc\uc801\uc774\uba70 \ucc3d\uc870\uc801\uc778 \uc0dd\uc0b0\ud65c\ub3d9, \uacbd\uc81c\ud65c\ub3d9\uc5d0 \uc18c\uc694\ub418\ub294 \uc218\uc694\ub7c9\uc740 \u30e6\uc5d0 \ub9de\ub294 \uc6d0\ucc9c\ub7c9\uc774 \uc548\ubc1b\uce68\ub420 \ub54c\uc5d0\ub9cc \uade0\ud615\uc774 \ubcf4\uc7a5\ub418\uc600\ub2e4\uace0 \ud560\uc218 \uc788\ub2e4\uff0e\r\n\r\n\uc218\uc694\uc640 \uc6d0\ucc9c\uc758 \ub7c9\uc801\uc801\uc751\uad00\uacc4\ub294 \uacbd\uc81c\uade0\ud615\uc758 \ubcf4\ud3b8\uc801\uc778 \ud45c\ud604\ud615\ud0dc\ub77c\uace0 \ud560\uc218 \uc788\ub2e4\uff0e \uacbd\uc81c\uade0\ud615\uc5d0\uc11c \uc8fc\ub418\ub294\uac83\uc740 \uc0dd\uc0b0\uacbd\uc601\ud65c\ub3d9\uacfc \uad00\ub828\ud55c \uade0\ud615\uc774\ub2e4\uff0e \ubaa8\ub4e0 \uc0dd\uc0b0\uacbd\uc81c\ud65c\ub3d9\uc740 \uc0dd\uc0b0\uc18c\ube44\uc801\ub828\uacc4\ub97c \ud544\uc218\uc801\uc73c\ub85c \uc694\uad6c\ud55c\ub2e4. \uc0ac\ud68c\uc801\uc0dd\uc0b0\uc740 \uc0dd\uc0b0\uc18c\ube44\uc801\ub828\uacc4\ub97c \ub5a0\ub098\uc11c\ub294 \uc9c4\ud589\ub420\uc218 \uc5c6\ub2e4\uff0e \uc0ac\ud68c\uc801\uc0dd\uc0b0\uc758 \uc0dd\uc0b0\uc18c\ube44\uc801\ub828\uacc4\ub294 \uc5b8\uc81c\ub098 \uc218\uc694\ub97c \uc77c\ubc29\uc73c\ub85c \ud558\uace0 \uc6d0\ucc9c\uc744 \ud0c0\ubc29\uc73c\ub85c \ud558\ub294 \ub7c9\uc790\uc758 \uc77c\uce58\uad00\uacc4\ub97c \ubcf4\uc7a5\ud560 \ub54c\uc5d0\ub9cc \uc2e4\ud604\ub41c\ub2e4\uff0e \uadf8\ub7ec\ubbc0\ub85c \uc218\uc694\uc640 \uc6d0\ucc9c\uc758 \ub7c9\uc801\uc801\uc751\uad00\uacc4\ub85c \ud45c\ud604\ub418\ub294 \uade0\ud615\uc5d0\ub294 \uc0dd\uc0b0\uc218\ub2e8\uc0dd\uc0b0\uacfc \uc18c\ube44\uc7ac\uc0dd\uc0b0\uc0ac\uc774\uc758 \uade0\ud615, \uacf5\uc5c5\uacfc \ub18d\uc5c5\uc744 \ube44\ub86f\ud55c \uc778\ubbfc\uacbd\uc81c \ubd80\ubb38\ub4e4\uc0ac\uc774\uc758 \uade0\ud615, \uae30\uc5c5\uc18c\uc758 \uc0dd\uc0b0\uacf5\uc815\ub4e4\uc0ac\uc774\uc758 \uade0\ud615 \ub4f1 \uc0dd\uc0b0\uc18c\ube44\uc801\uc73c\ub85c \ud638\uc0c1\ub828\uad00\ub418\uc5ec\uc788\ub294 \uacbd\uc81c\uade0\ud615\ub4e4\uc774 \uc18d\ud55c\ub2e4\uff0e \r\n\r\n\uacbd\uc81c\uaddc\ubaa8\uc640 \ubc1c\uc804\uc218\uc900\uc740 \uc0dd\uc0b0\ud65c\ub3d9, \uacbd\uc81c\ud65c\ub3d9\uc744 \ubc18\uc601\ud558\ub294 \uc911\uc694\ud55c \ub7c9\uc801\ud45c\ud604\uc758 \ud558\ub098\uc774\ub2e4\uff0e \ubaa8\ub4e0 \uacbd\uc81c\ud65c\ub3d9\uc740 \uc77c\uc815\ud55c \ub7c9\uc758 \uaddc\ubaa8\uc640 \ubc1c\uc804\uc218\uc900\uc73c\ub85c \ud45c\ud604\ub41c\ub2e4\uff0e \ub840\ucee8\ub300 \uacf5\uc5c5\uc0dd\uc0b0\ud65c\ub3d9\uc740 \ud604\ubb3c\uc0dd\uc0b0\ub7c9\uc774\ub098 \uc0dd\uc0b0\uc561\uacfc \uac19\uc740 \uc808\ub300\uc801\uc778 \uaddc\ubaa8\ub85c \ud45c\ud604\ub418\uba70 \uae30\uc220\uc7a5\ube44\ub3c4\ub098 \uc0dd\uc0b0\uc5d0 \ub300\ud55c \ube44\uc6a9\uc9c0\ucd9c\uc740 \uc77c\uc815\ud55c \uc218\uc900\uc73c\ub85c \ud45c\ud604\ub41c\ub2e4\uff0e \uc774\ub7ec\ud55c \uc758\ubbf8\uc5d0\uc11c \uaddc\ubaa8\uc640 \uc218\uc900\uc744 \ubc18\uc601\ud558\ub294 \ub7c9\uc801\ud45c\ud604\uc744 \uac00\uc9c0\uc9c0 \uc54a\ub294 \uc0dd\uc0b0\ud65c\ub3d9, \uacbd\uc81c\ud65c\ub3d9\uc774\ub780 \uc874\uc7ac\ud560\uc218 \uc5c6\ub2e4\uff0e \ub530\ub77c\uc11c \uc0dd\uc0b0\uc18c\ube44\uc801\ub828\uacc4\ub97c \ubc18\uc601\ud558\uace0 \uacbd\uc81c\uade0\ud615\ub4e4\uc740 \ub7c9\uc801\uc801\uc751\uad00\uacc4\ub85c \ud45c\ud604\ub420\ubfd0\uc544\ub2c8\ub77c \uaddc\ubaa8\uc640 \ubc1c\uc804\uc218\uc900\uc0ac\uc774\uc758 \ud638\uc0c1\uad00\uacc4\ub85c\ub3c4 \ud45c\ud604\ub41c\ub2e4\uff0e\r\n\r\n\uadf8\ub7f0\ub370 \uc0ac\ud68c\uc801\uc0dd\uc0b0\uacfc\uc815\uc5d0\uc11c \uc0dd\uc0b0\uc18c\ube44\uc801\uc73c\ub85c \ub828\uacb0\ub41c \uac1c\ubcc4\uc801\uc81c\ud488\uc774\ub098 \ubd80\ubb38\ub4e4\uc758 \uc0dd\uc0b0\uaddc\ubaa8\uc640 \ubc1c\uc804\uc218\uc900\uc758 \ub7c9\uc801\ud638\uc0c1\uad00\uacc4\ub294 \u30e6 \uc0dd\uc0b0\uc18c\ube44\uc801\ub828\uacc4\uc758 \ub7c9\uc801\uc801\uc751\uad00\uacc4\ub4e4 \uc9c1\uc811\uc801\uc73c\ub85c \ubc18\uc601\ud558\uc9c0 \ubabb\ud558\uace0 \ub9ce\uc740 \uacbd\uc6b0\uc5d0 \uadf8\ub4e4\uc0ac\uc774\uc758 \ub7c9\uc801\uc801\uc751\uad00\uacc4\ub97c \ubcf4\uc7a5\ud558\ub294\ub370 \ub9ac\uc6a9\ub418\uac8c \ub41c\ub2e4\uff0e \uc778\ubbfc\uacbd\uc81c\uacc4\ud68d\ud654\uc5d0\uc11c \uaddc\ubaa8\uc640 \ubc1c\uc804\uc218\uc900\uc0c1\uc758 \ud638\uc0c1\uad00\uacc4\ub97c \ud45c\ud604\ud558\ub294 \uacbd\uc81c\uade0\ud615\uc5d0\ub294 \ucd95\uc801\uacfc \uc18c\ube44\uc0ac\uc774\uc758 \uade0\ud615, \ub85c\ub3d9\uc0dd\uc0b0\ub2a5\ub960\uc758 \uc7a5\uc131\uacfc \ud3c9\uade0\uc0dd\ud65c\ube44\uc758 \uc7a5\uc131\uc18d\ub3c4\uc0ac\uc774\uc758 \uade0\ud615, \ub85c\ub3d9\uc790, \uc0ac\ubb34\uc6d0\ub4e4\uc758 \uc0dd\ud65c\uc218\uc900\uacfc \ud611\ub3d9\ub18d\ubbfc\ub4e4\uc758 \uc0dd\ud65c\uc218\uc900\uc0ac\uc774\uc758 \uade0\ud615, \uc0dd\uc0b0\uc694\uc18c\ub4e4\uc0ac\uc774\uc758 \uade0\ud615 \ub4f1\uc774 \uc18d\ud55c\ub2e4\uff0e\r\n\r\n\uc0ac\ud68c\uc801\uc0dd\uc0b0\uacfc\uc815\uc740 \uc6d0\ub8cc\ucc44\ucde8\ub85c\ubd80\ud130 \uc5ec\ub7ec \uac00\uacf5\ub2e8\uacc4\ub97c \uac70\uccd0 \ucd5c\uc885\uc0dd\uc0b0\ubb3c, \uc18c\ube44\uc801\uc218\uc694\ub97c \ucda9\uc871\uc2dc\ud0ac\uc218 \uc788\ub294 \uc644\uc131\ud488\uc744 \ub9cc\ub4e4\uc5b4\ub0b4\ub294 \uacfc\uc815\uc774\ub2e4\uff0e \uc774 \uacfc\uc815\uc5d0 \uc120\ud589\ub2e8\uacc4\uc5d0\uc11c\uc758 \uc0dd\uc0b0\ubb3c\uc740 \ub2e4\uc74c \ub2e8\uacc4\uc758 \uc6d0\ub8cc, \uc790\uc7ac\ub85c \ub418\uba70 \uadf8\uac83\uc774 \uc5ec\ub7ec \ub2e8\uacc4\ub97c \uac70\uce58\uba74\uc11c \ucd5c\uc885\uc0dd\uc0b0\ubb3c\ub85c \ub41c\ub2e4\uff0e \uc774\uac83\uc740 \uc0ac\ud68c\uc801\uc0dd\uc0b0\uacfc\uc815\uc774 \uacf5\uac04\uc801\uc73c\ub85c \ub04a\uc784\uc5c6\ub294 \uc774\ub3d9\uc744 \ub3d9\ubc18\ud558\uba74\uc11c \uc2dc\uac04\uc801\uc73c\ub85c\ub294 \uc120\ud6c4\ucc28\uc758 \ub828\uacc4\uc5d0 \ub193\uc774\uac8c \ub41c\ub2e4\ub294\uac83\uc744 \ubcf4\uc5ec\uc900\ub2e4\uff0e \ub2e4\uc2dc\ub9d0\ud558\uc5ec \uc790\uc5f0\uc0c1\ud0dc\uc5d0 \uc788\ub294 \uc2dc\ucd08\uc6d0\ub8cc\ub97c \uce90\ub0b4\uc5ec \uadf8\uac83\uc73c\ub85c \uac15\uc7ac\ub098 \ube44\ub0a0\ub860\uacfc \uac19\uc740 \uc6d0\ub8cc, \uc790\uc7ac\ub97c \ub9cc\ub4e4\uc218 \uc788\uc73c\uba70 \uc774\ub7ec\ud55c \uc6d0\ub8cc, \uc790\uc7ac\uac00 \ubcf4\uc7a5\ub418\ub294 \uc870\uac74\uc5d0\uc11c\ub9cc \uae30\uacc4\uc124\ube44\uc640 \ucc9c, \uc2e0\ubc1c\uacfc \uac19\uc740 \uc18c\ube44\uc7ac\ub97c \uc0dd\uc0b0\ud560\uc218 \uc788\ub2e4\uff0e \uc0ac\ud68c\uc801\uc0dd\uc0b0\uc758 \uacac\uc9c0\uc5d0\uc11c \ubcf4\uba74 \uac1c\ubcc4\uc801\uc778 \uc81c\ud488\uc758 \uc0dd\uc0b0\uc774 \uc0dd\uc0b0\uc18c\ube44\uc801\uc73c\ub85c \uc120\ud6c4\ucc28\uc801\uc778 \ud638\uc0c1\uad00\uacc4\ub97c \uac00\uc9c8\ubfd0\uc544\ub2c8\ub77c \uc778\ubbfc\uacbd\uc81c\ubd80\ubb38\uc0ac\uc774\uc5d0\ub3c4 \uc120\uc6b0\ucc28\uc758 \ub828\uacc4\uac00 \uc124\uc815\ub418\uac8c \ub41c\ub2e4\uff0e \r\n\r\n\uc704\ub300\ud55c \ub839\ub3c4\uc790 \uae40\uc815\uc77c\ub3d9\uc9c0\uaed8\uc11c\ub294 \uc778\ubbfc\uacbd\uc81c\ubd80\ubb38\ub4e4\uc758 \uc9c0\uc704\uc640 \uc5ed\ud560\uc744 \uacfc\ud559\uc801\uc73c\ub85c \ubd84\uc11d\ud558\uc2e0\ub370 \uae30\ucd08\ud558\uc2dc\uc5ec \ucc44\ucde8\uacf5\uc5c5\uacfc \uc804\ub825\uacf5\uc5c5, \uc6b4\uc218\ub97c \uc55e\uc138\uc6b8\ub370 \ub300\ud55c \ub3c5\ucc3d\uc801\uc778 \uacbd\uc81c\uac74\uc124\uc6d0\uce59\uc744 \uc81c\uc2dc\ud558\uace0 \uc778\ubbfc\uacbd\uc81c\uacc4\ud68d\ud654\uc5d0\uc11c \ucc44\ucde8\uacf5\uc5c5\uacfc \uac00\uacf5\uacf5\uc5c5, \uc0dd\uc0b0\uacfc \uc804\ub825, \uc0dd\uc0b0\uacfc \uc6b4\uc218\uc0ac\uc774\uc758 \uade0\ud615\uc744 \ud569\ub9ac\uc801\uc73c\ub85c \uc124\uc815\ud560\uc218 \uc788\ub294 \uacfc\ud559\uc801\uc778 \ubc29\ub3c4\ub97c \ubc1d\ud600\uc8fc\uc2dc\uc600\ub2e4\uff0e\r\n\r\n\ucc44\ucde8\uacf5\uc5c5\uacfc \uac00\uacf5\uacf5\uc5c5, \uc0dd\uc0b0\uacfc \uc804\ub825, \uc0dd\uc0b0\uacfc \uc6b4\uc218\uc0ac\uc774\uc758 \uade0\ud615\uc740 \ubd80\ubb38\uc0ac\uc774\uc758 \ud638\uc0c1\uad00\uacc4\uac00 \uc120\ud6c4\ucc28\uc801\uc778 \uad00\uacc4\ub85c \ud45c\ud604\ub418\ub294 \uacbd\uc81c\uade0\ud615\uc774\ub2e4\uff0e\r\n\r\n\uc774\ubc16\uc5d0\ub3c4 \uacbd\uc81c\uade0\ud615\uc740 \uacbd\ub9ac\ud615\ud0dc\uc640 \uad00\ub9ac\uc18c\uc18d\uc5d0 \ub530\ub77c \ubd84\ub958\ud560\uc218\ub3c4 \uc788\ub2e4\uff0e\r\n\r\n\uacbd\ub9ac\ud615\ud0dc\ubcc4\uade0\ud615\uc740 \uc6b0\ub9ac \ub098\ub77c\uc5d0 \uad6d\uac00\uc801\uc18c\uc720\uc640 \ud568\uaed8 \ud611\ub3d9\uc801\uc18c\uc720\uac00 \uc874\uc7ac\ud558\ub294\uac83\uacfc \uad00\ub828\ud558\uc5ec \uc81c\uae30\ub418\ub294 \uade0\ud615\uc774\ub2e4\uff0e \uacbd\ub9ac\ud615\ud0dc\ubcc4\uade0\ud615\uc5d0\ub294 \uad6d\uc601\uacbd\ub9ac\uc640 \ud611\ub3d9\uacbd\ub9ac\uc0ac\uc774\uc758 \uade0\ud615\uc774 \uc18d\ud55c\ub2e4\uff0e \uacbd\ub9ac\ud615\ud0dc\ubcc4 \uc6d0\uce59\uc744 \uc815\ud655\ud788 \ubcf4\uc7a5\ud558\ub294\uac83\uc740 \uc0ac\ud68c\uc8fc\uc758\uc801\uc18c\uc720\uad00\uacc4\ubc1c\uc804\uc758 \ud569\ubc95\uce59\uc801\uc694\uad6c\uc5d0 \ub9de\uac8c \uc0ac\ud68c\uc8fc\uc758\uc801\uc18c\uc720\ub97c \ub04a\uc784\uc5c6\uc774 \uacf5\uace0\ubc1c\uc804\uc2dc\ucf1c \ud611\ub3d9\uc801\uc18c\uc720\ub97c \uc810\ucc28 \uc804\uc778\ubbfc\uc801\uc18c\uc720\ub85c \uc811\uadfc\uc2dc\ud0a4\uace0 \uc720\uc77c\uc801\uc778 \uc804\ubbfc\uc18c\uc720\uc81c\ub97c \ud655\ub9bd\ud558\ub294\ub370\uc11c \uc911\uc694\ud55c \uc758\uc758\ub97c \uac00\uc9c4\ub2e4\uff0e\r\n\r\n\uad00\ub9ac\uc18c\uc18d\ubcc4\uade0\ud615\uc740 \uacbd\uc81c\ubd80\ubb38\uc774 \uad00\ub9ac\uc18c\uc18d\uc5d0 \ub530\ub77c \uac08\ub77c\uc9c0\ub294\uac83\uacfc \uad00\ub828\ud55c \uade0\ud615\uc774\ub2e4\uff0e \uad00\ub9ac\uc18c\uc18d\ubcc4\uade0\ud615\uc5d0\ub294 \uc911\uc559\uacf5\uc5c5\uacfc \uc9c0\ubc29\uacf5\uc5c5\uc0ac\uc774\uc758 \uade0\ud615\uc744 \ube44\ub86f\ud558\uc5ec \uc911\uc559\uacbd\uc81c\ubd80\ubb38\uacfc \uc9c0\ubc29\uacbd\uc81c\ubd80\ubb38\uc0ac\uc774\uc758 \uade0\ud615\uc774 \ud3ec\ud568\ub41c\ub2e4\uff0e \uad00\ub9ac\uc18c\uc18d\ubcc4\uade0\ud615\uc744 \uc815\ud655\ud788 \ubcf4\uc7a5\ud558\ub294\uac83\uc740 \uc778\ubbfc\uacbd\uc81c\ubc1c\uc804\uc5d0 \ub300\ud55c \uad6d\uac00\uc758 \uc911\uc559\uc9d1\uad8c\uc801\uc778 \uc9c0\ub3c4\uc640 \uc9c0\ubc29\uc758 \ucc3d\uc758\ucc3d\ubc1c\uc131\uc744 \ubc00\uc811\ud788 \uacb0\ubd80\uc2dc\ud0a4\uace0 \ub300\uaddc\ubaa8\uc911\uc559\uacf5\uc5c5\uacfc \uc911\uc18c\uaddc\ubaa8\uc9c0\ubc29\uacf5\uc5c5\uc744 \ubcd1\uc9c4\uc2dc\ucf1c \uc804\uba74\uc801\uc0ac\ud68c\uc8fc\uc758\uac74\uc124\uc744 \ub354\uc6b1 \ub2e4\uadf8\uce58\ub294\ub370\uc11c \uc911\uc694\ud55c \uc758\uc758\ub97c \uac00\uc9c4\ub2e4\uff0e\r\n\r\n\uc0ac\ud68c\uc8fc\uc758\uacbd\uc81c\uac74\uc124\uc774 \uc9c4\ucc99\ub418\uace0 \uacbd\uc81c\uc758 \uaddc\ubaa8\uac00 \ubc29\ub300\ud574\uc9c8\uc218\ub85d \uc778\ubbfc\uacbd\uc81c\uacc4\ud68d\ud654\uc5d0\uc11c \uacbd\uc81c\uade0\ud615\uc744 \uc633\uac8c \ubcf4\uc7a5\ud558\ub294 \ubb38\uc81c\ub294 \ub354\uc6b1 \uc911\uc694\ud558\uac8c \uc81c\uae30\ub41c\ub2e4\uff0e \uadf8\ub7ec\ubbc0\ub85c \uc778\ubbfc\uacbd\uc81c\uacc4\ud68d\ud654\uc5d0\uc11c\ub294 \uacbd\uc81c\uade0\ud615\ub4e4\uc744 \uc815\ud655\ud788 \ubd84\ub958\ud558\uace0 \ubaa8\ub4e0 \uacbd\uc81c\uade0\ud615\ub4e4\uc744 \ub2e4 \uc798 \ub9de\ubb3c\ub9ac\uae30 \uc704\ud55c \uacbd\uc81c\uc870\uc9c1\uc0ac\uc5c5\uc744 \ub354\uc6b1 \uc9dc\uace0\ub4e4\uc5b4 \uc9c4\ud589\ud574\ub098\uac00\uc57c \ud55c\ub2e4\uff0e", "author": "\ucd5c\uc6a9\ub0a8"}